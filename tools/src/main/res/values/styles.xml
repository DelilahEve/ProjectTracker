<resources>

    <!-- Backgrounds -->
    <attr name="backgroundColour" format="reference" />
    <attr name="backgroundCardColour" format="reference" />
    <attr name="backgroundCardShadow" format="reference" />
    <attr name="backgroundCardShadowPressed" format="reference" />

    <!-- Colours -->
    <attr name="textToolbar" format="reference" />
    <attr name="textContent" format="reference" />
    <attr name="textFaded" format="reference" />

    <!-- Images -->
    <attr name="actionOptions" format="reference" />
    <attr name="actionPlus" format="reference" />
    <attr name="iconSettings" format="reference" />
    <attr name="iconTheme" format="reference" />
    <attr name="iconSyncEnabled" format="reference" />
    <attr name="iconSyncDisabled" format="reference" />
    <attr name="iconNext" format="reference" />
    <attr name="iconSearch" format="reference" />
    <attr name="iconSort" format="reference" />
    <attr name="iconSave" format="reference" />
    <attr name="iconMenu" format="reference" />

    <style name="Theme.Notepad.Light.LightFeature" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Colours -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColour">@color/backgroundLight</item>
        <item name="backgroundCardColour">@color/dialogBackgroundLight</item>
        <item name="backgroundCardShadow">@color/cardShadowLight</item>
        <item name="backgroundCardShadowPressed">@color/cardShadowPressedLight</item>

        <!-- Text Colours -->
        <item name="textToolbar">@color/textLight</item>
        <item name="textContent">@color/textDark</item>
        <item name="textFaded">@color/textLightFaded</item>
    </style>

    <style name="Theme.Notepad.Light.DarkFeature" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Colours -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColour">@color/backgroundLight</item>
        <item name="backgroundCardColour">@color/dialogBackgroundLight</item>
        <item name="backgroundCardShadow">@color/cardShadowLight</item>
        <item name="backgroundCardShadowPressed">@color/cardShadowPressedLight</item>

        <!-- Text Colours -->
        <item name="textToolbar">@color/textDark</item>
        <item name="textContent">@color/textDark</item>
        <item name="textFaded">@color/textLightFaded</item>
    </style>

    <style name="Theme.Notepad.Dark.LightFeature" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Colours -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColour">@color/backgroundDark</item>
        <item name="backgroundCardColour">@color/dialogBackgroundDark</item>
        <item name="backgroundCardShadow">@color/cardShadowDark</item>
        <item name="backgroundCardShadowPressed">@color/cardShadowPressedDark</item>

        <!-- Text Colours -->
        <item name="textToolbar">@color/textLight</item>
        <item name="textContent">@color/textLight</item>
        <item name="textFaded">@color/textDarkFaded</item>
    </style>

    <style name="Theme.Notepad.Dark.DarkFeature" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Colours -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="backgroundColour">@color/backgroundDark</item>
        <item name="backgroundCardColour">@color/dialogBackgroundDark</item>
        <item name="backgroundCardShadow">@color/cardShadowDark</item>
        <item name="backgroundCardShadowPressed">@color/cardShadowPressedDark</item>

        <!-- Text Colours -->
        <item name="textToolbar">@color/textDark</item>
        <item name="textContent">@color/textLight</item>
        <item name="textFaded">@color/textDarkFaded</item>
    </style>

</resources>
